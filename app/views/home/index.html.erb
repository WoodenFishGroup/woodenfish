
<div class="panel panel-default">
  <ul class="list-group">
    <% @posts.each do |post| %> 
      <li class="list-group-item" style="padding:20px">
        <div class="media">
          <div style="float:left;width:60px;margin-right:10px;text-align:center">
            <a style="font-size:30px" href="#">&#9734;</a><br />
            <span style="font-size:20px;width:100%;"><%= rand(100) %></span>
          </div>
          <div class="media-body">
              <div>
                <h2 class="media-heading"> <%= post.subject %> </h2>
                <div style="float:left;padding-right:10px">
                  <img style="width:40px;height:40px;border-radius: 5px;"
                    class="pull-right media-object" 
                    src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(post.user.email) %>" />
                </div>
                <div><%= post.user.name %></div>
                <div><%= time_ago_in_words(post.created) %> ago</div>
              </div>
              <p> <%= simple_format(post.body).html_safe %> </p>
              <div>
                <a src="#">add comment (0)</a>
              </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <div class="pagination pagination-right" style="vertical-align: middle;">                                      
    <% cond = {} %>                                                                                              
    <%= will_paginate @posts, :params => cond, :renderer => BootstrapPagination::Rails %>                    
  </div>                                                                                                         
</div>
