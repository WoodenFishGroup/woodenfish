<style>
  .list-group-item {
    border-radius: 8px;
    border-radius: 8px;
  }
  .list-group-item:first-child {
    border-radius: 8px;
    border-radius: 8px;
  }
  .list-group-item:last-child {
    border-radius: 8px;
    border-radius: 8px;
  }
</style>

<div>
  <% if @posts.empty? %>
    <div class="container" style="width:50%">
      <h4>No posts found! Explore <a href="/">home page</a> and add more stars!</h4>
      <%= image_tag "woodenfish-loading.jpg", :class => "img-circle" %>
    </div>
  <% end %>
  <ul class="list-group" style="margin-left:0px;background-color:#dddddd">
    <% @posts.each do |post| %> 
      <li class="list-group-item" style="padding:20px;margin-bottom:20px">
        <div class="media">
          <div style="float:left;width:60px;margin-right:10px;text-align:center">
            <%= render :partial => 'stars/star', :locals => {:post => post} %>
          </div>
          <div class="media-body">
            <%= render :partial => 'posts/post', :locals => {:post => post, :mode => "view"} %>
            <div id="post-comment-section-<%= post.id %>">
              <div id="post-comment-<%= post.id %>">
                  <% comment_count = post.comments_count %>
                  <% if comment_count > 0 %>
                    <%= link_to "#{comment_count} comment#{"s" if comment_count > 1}", 
                          post_comments_path(post.id),
                          :method => :get, :remote => true %>
                  <% end %>
              </div>
              <div style="margin-right:60px;margin-top:10px">
                <script>
                  $(function(){
                    $('#comment-form-<%= post.id %>').bind('ajax:success', function(xhr, data, status){
                      $('#comment-body-<%= post.id %>').val("")
                      $.get('<%= post_comments_path(post.id) %>')
                    });
                  });
                </script>
                <%= form_tag "comments", :id => "comment-form-#{post.id}", :style => "margin-bottom:10px",
                    :remote => true, :method => "POST" do %>
                  <input type="hidden" name="post_id" value="<%= post.id %>" />
                  <input type="hidden" name="user_id" value="<%= get_current_user_id %>" />
                  <%= text_field_tag :comment_body, "", :id => "comment-body-#{post.id}",
                      :placeholder => "comment here...",
                      :style => "margin-bottom:0px;height:30px;width:100%;padding:5px;border:1px solid #dddddd" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div>
  <% cond = {} %>
  <%= will_paginate @posts, :params => cond, :renderer => BootstrapPagination::Rails, :class => "pager" %>
</div>                                                                                                         
